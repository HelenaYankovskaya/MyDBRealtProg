<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:user</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <mapping class="com.it.model.UserRole"></mapping>
        <mapping class="com.it.model.User"></mapping>
        <mapping class="com.it.model.Client"></mapping>
        <mapping class="com.it.model.Realtor"></mapping>
        <mapping class="com.it.model.Servise"></mapping>
        <mapping class="com.it.model.Contracts"></mapping>
        <mapping class="com.it.model.Flats"></mapping>
        <mapping class="com.it.model.Planing"></mapping>
        <mapping class="com.it.model.Repair"></mapping>
        <mapping class="com.it.model.Walls"></mapping>
        <mapping class="com.it.model.Recommended_value"></mapping>
        </session-factory>
</hibernate-configuration>